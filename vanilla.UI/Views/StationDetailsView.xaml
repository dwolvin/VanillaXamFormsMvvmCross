<?xml version="1.0" encoding="UTF-8"?>
<views:MvxContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:vanilla.UI.Views"
    x:Class="vanilla.UI.Views.StationDetailsView">
    <views:MvxContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="40">
            <Label Text="Station Details" FontSize="Large"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Code:"/>
                <Label Text="{Binding Station.StationCode}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Name:"/>
                <Label Text="{Binding Station.StationName}"/>
            </StackLayout>

        </StackLayout>
    </views:MvxContentPage.Content>
</views:MvxContentPage>
